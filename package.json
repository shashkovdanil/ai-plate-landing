{
  "name": "ai-plate-landing",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:test": "dotenv -e .env.test.local -- pnpm run dev",
    "build": "next build",
    "start": "next start",
    "lint": "biome check ./src/**/*",
    "test": "vitest run",
    "studio:dev": "dotenv -e .env.development.local -- drizzle-kit studio",
    "studio:prod": "dotenv -e .env.production.local -- drizzle-kit studio",
    "studio:test": "dotenv -e .env.test.local -- drizzle-kit studio",
    "db:push:all": "pnpm run db:push:dev && pnpm run db:push:prod && pnpm run db:push:test",
    "db:push:dev": "dotenv -e .env.development.local -- drizzle-kit push:pg",
    "db:push:prod": "dotenv -e .env.production.local -- drizzle-kit push:pg",
    "db:push:test": "dotenv -e .env.test.local -- drizzle-kit push:pg",
    "generate": "graphql-codegen"
  },
  "dependencies": {
    "@apollo/server": "^4.10.4",
    "@as-integrations/next": "^3.0.0",
    "@clerk/clerk-sdk-node": "^5.0.0",
    "@clerk/nextjs": "^4.29.12",
    "@neondatabase/serverless": "^0.9.1",
    "@t3-oss/env-nextjs": "^0.9.2",
    "drizzle-graphql": "^0.3.2",
    "drizzle-orm": "^0.30.9",
    "drizzle-zod": "^0.5.1",
    "graphql": "^16.8.1",
    "graphql-scalars": "^1.23.0",
    "graphql-tag": "^2.12.6",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "next": "14.2.2",
    "openai": "^4.38.3",
    "pg": "^8.11.5",
    "react": "^18",
    "react-dom": "^18",
    "svix": "^1.21.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.6.4",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/client-preset": "^4.2.5",
    "@graphql-codegen/typescript": "^4.0.6",
    "@graphql-codegen/typescript-resolvers": "^4.0.6",
    "@next/env": "^14.1.4",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "dotenv-cli": "^7.4.1",
    "drizzle-kit": "^0.20.17",
    "postcss": "^8",
    "simple-git-hooks": "^2.11.1",
    "tailwindcss": "^3.4.3",
    "typescript": "^5",
    "vitest": "^1.4.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm run lint"
  }
}
